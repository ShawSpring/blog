{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": ["src/**/*","*.config.js","*.config.mjs"],
		"ignore": ["node_modules/**/*","dist/**/*"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y":{
				"useButtonType": "off"
			},
			
			"recommended": true
		}
	}
}
